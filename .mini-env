#!/bin/zsh

export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# I don't use $EDITOR to avoid undesired interaction with other programs
export MY_EDITOR="sublime"

# Use coreutils rather than OS X version of utils
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"

# My projects...
export PROJECTS="$HOME/Documents/Projects"
export MY_USERNAME="Duhemm"

# Sublime text
export PATH="/Applications/Sublime Text.app/Contents/SharedSupport/bin:$PATH"

# Scala related
export SCALA_VERSION="2.12.1"
export PATH="/usr/local/Cellar/llvm/3.9.0/bin:$PATH"
export PATH="$HOME/Applications/scala/scala-$SCALA_VERSION/bin:$PATH"
export PATH="$HOME/Applications/sbt:$PATH"
export PATH="$HOME/Applications/activator/activator-latest:$PATH"
export PATH="$HOME/Applications/play/play-latest:$PATH"
export PATH="$HOME/bin:$PATH"

# Spark
export PATH="$HOME/Applications/spark-2.0.1-bin-hadoop2.7/bin:$PATH"

# My scripts
export ALIASES="$HOME/.aliases"
export SCRIPTS="$HOME/utils/shell"
export PATH="$SCRIPTS:$PATH"

# My project templates
export TEMPLATES="$HOME/utils/templates"
