shell "/bin/zsh"

backtick 1 5 5 true
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus ignore #string "screen (%n: %t)"
caption string "%{= kw}%Y-%m-%d;%c %{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always
altscreen on

bind h focus left
bind ^h focus left

bind j focus down
bind ^j focus down

bind k focus up
bind ^k focus up

bind l focus right
bind ^l focus right

defscrollback 10000

startup_message off

bind -n C-k clear-history
